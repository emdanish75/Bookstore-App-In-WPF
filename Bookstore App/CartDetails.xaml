<Window x:Class="Bookstore_App.CartDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bookstore_App"
        mc:Ignorable="d"
        Title="CartDetails" Height="490" Width="800">
    <Grid Background="#FF41CA69">
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,0,206"/>
        <Button Content="Checkout" Width="70" HorizontalAlignment="Center" Margin="0,389,0,0" VerticalAlignment="Top" Background="#FFB53636" FontSize="16"/>
        <Button Content="Remove" Width="70" HorizontalAlignment="Center" Margin="0,307,0,0" VerticalAlignment="Top" Background="#FFB53636" FontSize="16"/>
        <Button Content="Clear" Width="70" HorizontalAlignment="Center" Margin="0,347,0,0" VerticalAlignment="Top" Background="#FFB53636" FontSize="16"/>
        <Button Content="Back" Width="70" HorizontalAlignment="Center" Margin="0,429,0,0" VerticalAlignment="Top" Background="#FFB53636" FontSize="16"/>
    </Grid>
</Window>
